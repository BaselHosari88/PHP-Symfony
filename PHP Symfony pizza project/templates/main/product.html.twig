{% extends 'base.html.twig' %}

{% block title %}Hello YoutubeController!{% endblock %}



{% block body %}
    <style>
        .example-wrapper { margin: 1em auto; max-width: 800px; width: 95%; font: 18px/1.5 sans-serif; }
        .example-wrapper code { background: #F5F5F5; padding: 2px 6px; }
    </style>



    <div class="container ">
        <div class="row">

            {% for pizza in pizzas %}

                <div class="col-md-3 col-sm-6 col-12 text-center m-5 p-1">
                    <a href=" {{ path('app_form',{id:pizza.id} ) }}">
                        <div class="card p-1 m-3" style="width: 350px ; height: auto ">
                            <img src="{{ asset("img/" ~ pizza.img) }}" class="card-img-top" alt="...">


                            <div class="card-body">
                                <h5 class="card-title">{{ pizza.name }}</h5>
                                <p class="card-text">{{ pizza.description }}</p>
                            </div>
                        </div>

                    </a>
                </div>
            {% endfor %}
        </div>

    </div>




{% endblock %}


